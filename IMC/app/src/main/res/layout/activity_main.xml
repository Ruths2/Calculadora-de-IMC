<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:gravity="center">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="90dp"
		android:text="Calculadora de IMC"
		android:fontFamily="cursive"
		android:textSize="30sp"
		android:gravity="center"
		android:textStyle="bold"
		android:layout_margin="10dp"
		android:textColor="#FF000000"
        android:textIsSelectable="true"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="80dp"
		android:gravity="center"
		android:textColor="@color/black"
		android:text="Para calcular o seu IMC (Indice de Massa Corporal), preencha o campo abaixo com seu peso e altura, apos clique no botão *CALCULAR IMC*."
		android:textIsSelectable="true"/>

	<EditText
		android:id="@+id/editPeso"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:hint="Peso (ex: 70)"
		android:inputType="number"
		android:layout_marginTop="2dp"/>

	<EditText
		android:id="@+id/editAltura"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:hint="Altura (ex: 1.85)"
		android:inputType="numberDecimal"/>

	<Button
		android:id="@+id/btCalcular"
		android:layout_width="240dp"
		android:layout_height="40dp"
		android:background="@color/azulCadete"
		android:text="CALCULAR IMC"
		android:layout_margin="2dp"/>

	<TextView
		android:id="@+id/textResultado"
		android:layout_height="180dp"
		android:gravity="center"
		android:layout_margin="7dp"
		android:textColor="#FF000000"
		android:background="@drawable/background"
		android:hint="Resultado do calculo"
		android:layout_width="match_parent"
		android:textIsSelectable="true"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:gravity="bottom">

		<ImageView
			android:layout_width="80dp"
			android:layout_height="120dp"
			android:src="@drawable/imc_borda_redonda"
			android:gravity="center"
			android:padding="10dp"/>

		<TextView
			android:layout_width="170dp"
			android:layout_height="100dp"
			android:gravity="center"
			android:text="ATENÇAO:Este app não substitui uma consulta com um profissional de saúde. Em casos de duvidas, imc abaixo do peso, acima do peso e obesidades grau I II III, procure o seu médico."
			android:background="@drawable/borda"
			android:textSize="12sp"
			android:layout_marginStart="100dp"
			android:layout_marginBottom="2dp"
            android:textIsSelectable="true"/>

	</LinearLayout>

</LinearLayout>

